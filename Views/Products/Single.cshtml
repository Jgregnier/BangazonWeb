@model BangazonWeb.ViewModels.SingleProductViewModel

@{
  ViewData["Title"] = "Product Details";
}
<div class="row text-center"> <h1> @ViewData["Title"] </h1> </div>
  <!--Name-->
<h2 class="row text-center"> @Html.DisplayFor(model => model.Product.Name) </h2>
  <!--Description-->
<p class="row text-center"> @Html.DisplayFor(model => model.Product.Description) </p>
  <!--Price-->
<p class="row text-center"> $@Html.DisplayFor(model => model.Product.Price) </p>
  <!--Button with Add to Cart on it-->
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 text-center">
  <button class="btn btn-large btn-success" asp-action="AddToCart" asp-route-id="@Model.Product.ProductId"> Add to Cart </button>

  </div>
  <div class="col-md-3"></div>
</div>  
